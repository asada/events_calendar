<div class="row">
  <div class="col-md-12 ">
    <div class="panel panel-default">
      <div class="panel-body">
        <h1>Event List</h1>
        <% dated_events.each do |date, events| %>
          <% if date == Date.today %>
            <h2>Today - <%= date.strftime("%A, %B #{date.day.ordinalize}") %> </h2>
            <%= render partial: "event_table", locals: { events: events } %>

          <% elsif date == Date.tomorrow %>
            <h2>Tomorrow - <%= date.strftime("%A, %B #{date.day.ordinalize}") %> </h2>
            <%= render partial: "event_table", locals: { events: events } %>
          <% elsif date >= Date.tomorrow %>
            <h2><%= date.strftime("%A, %B #{date.day.ordinalize}") %> </h2>
            <%= render partial: "event_table", locals: { events: events } %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

