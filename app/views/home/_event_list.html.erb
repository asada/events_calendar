<div class="row">
  <div class="col-md-12 ">
    <div class="panel panel-default">
      <div class="panel-body">
        <h1>Event List</h1>
        <% events.each do |date, kids| %>
          <h2><%= date %></h2>
          <table class="table">
            <tr>
              <th>Title</th>
              <th>Description</th>
              <th>Speaker</th>
              <th>Date</th>
              <th>Time</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
            <% kids.each do |e| %>
              <tr>
                <td><%= e.name %></td>
                <td><%= e.description %></td>
                <td><%= e.speaker %></td>
                <td><%= e.date %></td>
                <td><%= e.time %></td>
                <td><%= link_to "More Info", event_path(e), class: "btn btn-primary btn-xs" %></td>
              </tr>
            <% end %>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>

